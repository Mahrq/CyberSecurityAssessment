<Window x:Class="AttackSecuritySimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttackSecuritySimulator"
        xmlns:vm="clr-namespace:AttackSecuritySimulator_ViewModels;assembly=AttackSecuritySimulator_ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="720" Width="1280" MinHeight="720" MinWidth="1280">
    <!--Resources for MainWindow will be the main screens: MainMenu, About, Credits, and In-game-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainWindowViewModel}">
            <local:MainMenuView/>
        </DataTemplate>
        <vm:PlayerStatsViewModel x:Key="PlayerStatsViewModel"/>
    </Window.Resources>
    <!--ViewModel for MainWindow-->
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <!--MainWindow Contents-->
    <Border Padding="5" Background="{StaticResource BackGroundBrush}" DataContext="{StaticResource PlayerStatsViewModel}">
        <ContentControl Name="DisplayUserControl">
            <local:MainMenuView/>
        </ContentControl>
    </Border>
</Window>
