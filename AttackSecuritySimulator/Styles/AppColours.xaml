<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AttackSecuritySimulator">
    <!--Lighter Black-->
    <Color x:Key="BackGround">#202020</Color>
    <SolidColorBrush x:Key="BackGroundBrush" Color="{StaticResource BackGround}"/>

    <!--Dark Grey-->
    <Color x:Key="Interactable">#373737</Color>
    <SolidColorBrush x:Key="InteractableBrush" Color="{StaticResource Interactable}"/>
    
    <!--Dark White-->
    <Color x:Key="TextColour">#e6e6e6</Color>
    <SolidColorBrush x:Key="TextColourBrush" Color="{StaticResource TextColour}"/>

    <!--Grey to black gradient-->
    <LinearGradientBrush x:Key="BlackGrey" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Interactable}" Offset="0.1"/>
        <GradientStop Color="{StaticResource BackGround}" Offset="0.9"/>
        <GradientStop Color="{StaticResource Interactable}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>